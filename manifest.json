{
    "manifest_version": 3,
    "name": "RSS Notifier",
    "version": "0.1",
    "description": "Get notifications for new RSS feed posts.",
    "permissions": [
      "notifications",
      "storage",
      "alarms"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "options_page": "options.html",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }  